<% unless @additional_categories.empty? %>
    <table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
      <tr class="tr-head">
        <td><%= t('sl_no') %></td>
        <td><%= t('fees_name') %></td>
        <td><%= t('batch') %> <%= t('name') %></td>
        <td><%= t('created_date') %></td>
      </tr>
      <tr class="tr-blank"></tr>

      <% @additional_categories.each_with_index do |fees,i| %>
        <tr class="tr-<%= cycle("odd","even") %>">
          <td class="col-1"><%= i+1 %></td>
          <td class="col-2"><%= link_to_remote fees.name,:url => {:action => 'additional_particulars',:id => fees.id }%>
            <%  unless fees.check_fee_collection_for_additional_fees == false %>
              <span class="small"> <%= link_to_remote t('delete_text'),:confirm=>"#{t('delete_confirm_msg')}", :url => { :action => 'additional_fees_delete',:id => fees.id} %></span>
            <% else %>
              <span class="small-strike"><%= t('delete_text') %></span>
            <% end %>
            <span class="small"> <%= link_to_remote t('edit_text'), :url => { :action => 'additional_fees_edit',:id => fees.id} %></span>
          </td>
          <td class="col-3"><%= shorten_string(fees.batch.full_name,20) unless fees.batch.nil?%> </td>
          <td class="col-3"><%= I18n.l(fees.created_at,:count=> (fees.created_at).day, :format=>"%m-%d-%Y") %></td>
        </tr>
      <% end %>
    </table>
  <% else %>
    <table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
      <tr class="tr-head">
        <td><%= t('no_categories_to_display') %></td>
      </tr>
    </table>

  <% end%>