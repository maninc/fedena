<div id="content-header">
<%= image_tag("/images/show_finance.png") %>
  <h1><%= t('liability_view') %></h1>
  <h3><%= @liability.title %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>
<div id="page-yield">


  <div id="liability-body">
    <div id="liability-title"><%= t('liability_name') %> : <%= @liability.title%></div>
    <div id="liability-description"><%= @liability.description %></div>
    <br/>
    <div id="liability-amt"><%= t('amount') %> : <%=@currency_type + " "%><%= @liability.amount%></div>
    <div id="liability-date"><%= t('created_at') %> : <%= I18n.l(@liability.created_at,:count=> (@liability.created_at).day, :format=>"%A, %d %B, %Y") %></div>
  </div>



</div>