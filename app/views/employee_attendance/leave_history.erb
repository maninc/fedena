<div id="content-header">
  <%= image_tag("/images/attendence/attendence.png") %>
  <h1><%= t('employee_attendance_text') %></h1>
  <h3><%= t('leave_history') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>
<div id="inner-tab-menu">
  <ul>
    <%  if permitted_to? :emp_attendance,:employee_attendance %>
      <li><%= link_to "#{t('mini_report')}", :action => 'emp_attendance', :id=>@employee.id %></li>
    <% end %>
  </ul>
</div>
<div id="page-yield">
  <div class="box">

    <% remote_form_for :period ,:url=>{:action=>'update_leave_history', :id=>@employee.id}do |f| %>
      <div class="label-field-pair">
        <label for="reason"><%= t('start_date') %></label>
        <div class="text-input-bg"><%= calendar_date_select_tag 'period[start_date]', I18n.l(1.month.ago.to_date,:count=> (1.month.ago.to_date).day, :format=>:default) ,:popup=>:force%></div>
      </div>
      <div class="label-field-pair">
        <label for="reason"><%= t('end_date') %></label>
        <div class="text-input-bg"><%= calendar_date_select_tag 'period[end_date]', I18n.l(Date.today,:count=> (Date.today).day, :format=>:default) ,:popup=>:force%></div>
      </div>
      <div id="submit-button">
        <%=  submit_tag "â–º#{t('go')}",:class=>'submit_button' %>
      </div>
    <% end %>

  </div>

  <div id="attendance-report">


  </div>

</div>
